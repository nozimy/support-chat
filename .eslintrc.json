{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
		"eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
		"process": true,
		"require": true,
		"__filename": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
	"parser": "babel-eslint",
    "rules": {
		"indent": [2, "tab"],
		"no-tabs": 0,
		"no-underscore-dangle": 0,
		"no-prototype-builtins": 0,
		"class-methods-use-this": 0,
		"no-unused-vars": 0,
		"no-empty-function": 0,
		"no-shadow": 0,
		"import/prefer-default-export": 0,
		"no-param-reassign": 0,
		"arrow-parens": 0,
		"no-useless-constructor": 0,
		"prefer-promise-reject-errors": 0,
		"no-useless-escape": 0,
		"consistent-return": 0,
		"no-continue": 0,
		"no-plusplus": 0,
		"max-len": ["error", 100, 2, {
			"ignoreUrls": true,
			"ignoreComments": false,
			"ignoreRegExpLiterals": true,
			"ignoreStrings": true,
			"ignoreTemplateLiterals": true
		}],
		"default-case": 0
	}
}
